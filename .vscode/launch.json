  "version": "0.2.0",
  "configurations": [
    {
      "name": "(Windows) Launch",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/Sanbox/Sandbox.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/bin/Sanbox/",
      "environment": [],
      "console": "newExternalWindow"
    },
    {
      "name": "(Linux) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/Debug-linux-x86_64/Sandbox/Sandbox",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/bin/Debug-linux-x86_64/Sandbox",
      "environment": [],
      "setupCommands": [
                {   // Display content in STL containers pretty
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
    }
  ]
}
