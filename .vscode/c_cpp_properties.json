{
  "configurations": [
    {
      "name": "Linux",
      "includePath": [
        "${workspaceFolder}/Psyche/src/**",
        "${workspaceFolder}/Psyche/vendor/spdlog/include",
        "${workspaceFolder}/Psyche/vendor/GLFW/include",
        "${workspaceFolder}/Psyche/vendor/Glad/include",
        "${workspaceFolder}/Psyche/vendor/Glad/src/**",
        "${workspaceFolder}/Psyche/vendor/imgui"
      ],
      "forcedInclude": ["${workspaceFolder}/Psyche/src/psychepch.h"],
      "compilerPath": "/usr/bin/clang", // Path to your Clang compiler
      "intelliSenseMode": "clang-x64", // IntelliSense mode for Clang
      "cStandard": "c17", // C standard version
      "cppStandard": "c++17" // C++ standard version
    },
    {
      "name": "Win32",
      "includePath": [
        "${workspaceFolder}/Psyche/src/**",
        "${VULKAN_SDK}/include"
      ],
      "forcedInclude": ["${workspaceFolder}/Psyche/src/psychepch.h"],
      "compilerPath": "/usr/bin/clang", // Path to your Clang compiler
      "intelliSenseMode": "clang-x64", // IntelliSense mode for Clang
      "cStandard": "c17", // C standard version
      "cppStandard": "c++17" // C++ standard version
    }
  ],
  "version": 4
}
